  <p class="text-warning">
    <h1 class="text-warning text-center">Sign in</h1>
    <h5 class="text-warning text-center">or 
      <a href="register">
      
        <h4 class="text-info">Sign up for  a new account</h4></a></h5>
  </p>
  
  <form method = "post" action="auth/signIn">
    <div  class="form-group">
      

      <label for="email" class="text-info form-label mt-4">Email address</label>
      <input
        type="email"
        name="email"
        class="form-control"
        id="email"
        aria-describedby="emailHelp"
      />
    </div>
    <div class="form-group">
      <label for="password" class="text-info form-label mt-4">Password</label>
      <input 
      type="confirmpassword" 
      class="form-control" 
      id="password" 
      name="password"/>
    </div>

      <br>
      <h1 class="text-center">
      <button type="submit" class="btn btn-success ">Sign in</button>
      </h1>
    </div>
  </form>
  </div>
</div>
